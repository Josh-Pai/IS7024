@page
@model SafeStreet.Pages.CrimeMapModel
@{
    ViewData["Title"] = "Crime Map View";
}

<h2>Crime Map View</h2>

<!-- Explanation about the rankings and calculation -->
<p>
    The safety scores below are ranked from highest to lowest, with higher scores indicating safer neighborhoods</p>
    <p>These scores are calculated based on a combination of recent police reports and user-submitted safety ratings</p>



    <div class="crime-map-grid">
        @foreach (var neighborhood in Model.NeighborhoodSafetyScores.OrderByDescending(kvp => kvp.Value))
        {
            var safetyScore = neighborhood.Value;
            var className = safetyScore switch
            {
                >= 80 => "very-low-crime",
                >= 60 => "low-crime",
                >= 40 => "medium-crime",
                _ => "high-crime"
            };

            <div class="grid-item @className" onclick="selectNeighborhood('@neighborhood.Key')">
                <span>@neighborhood.Key</span>
                <br />
                <span>Safety Score: @safetyScore.ToString("F1")</span> <!-- Format score to 1 decimal place -->
            </div>
            <script>
                function selectNeighborhood(neighborhood) {
                    // Redirect to the Test page and pass the neighborhood name as a query parameter
                    window.location.href = `/Test?neighborhood=${encodeURIComponent(neighborhood)}`;
                }
            </script>

        }
    </div>
</div>

<style>
    .crime-map-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 10px;
        margin-top: 20px;
    }

    .grid-item {
        padding: 20px;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }

    .high-crime {
        background-color: #d32f2f;
    }

    .medium-crime {
        background-color: #e57373;
    }

    .low-crime {
        background-color: #ef9a9a;
    }

    .very-low-crime {
        background-color: #ffcdd2;
    }
</style>
