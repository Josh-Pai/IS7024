<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SafeStreet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SafeStreet.styles.css" asp-append-version="true" />
</head>

<style>




    .navbar {
        background-color: #FF0000; /* Solid red background */
        border-bottom: 2px solid #F60000; /* Maintain bottom border */
        padding: 0.5rem 1rem;
        position: fixed;
        width: 100%;
        z-index: 1000;
    }

    .navbar-brand {
        font-size: 1.5rem;
        font-weight: 700;
        color: #000 !important; /* Black font for brand */
        display: flex;
        align-items: center;
    }

        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }

    .nav-link {
        color: #000 !important; /* Black font for nav links */
        font-weight: 600;
        text-transform: uppercase;
        margin: 0 10px;
        position: relative;
        font-size: 1rem;
    }

        .nav-link:hover {
            color: #fff !important; /* White font on hover */
        }

    .nav-item {
        margin-right: 15px;
    }

    media (max-width: 576px) {
        .nav-item

    {
        margin-right: 0;
        margin-bottom: 10px;
    }

    }
</style>




<body>
    <header b-o8z2mjie9s>
        <nav b-o8z2mjie9s class="navbar navbar-expand-sm navbar-light">
            <div b-o8z2mjie9s class="container">
                <a class="navbar-brand" href="/">
                    <img src="/lib/SafeStreetLogo.jpeg" alt="SafeStreet Logo" />
                    SafeStreet
                </a>
                <button b-o8z2mjie9s class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span b-o8z2mjie9s class="navbar-toggler-icon"></span>
                </button>
                <div b-o8z2mjie9s class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul b-o8z2mjie9s class="navbar-nav flex-grow-1">
                        <li b-o8z2mjie9s class="nav-item">
                            <a class="nav-link" href="/">Map</a>
                        </li>
                        <li b-o8z2mjie9s class="nav-item">
                            <a class="nav-link" href="/CrimeMap">Neighborhood Ratings</a>
                        </li>
                        <li b-o8z2mjie9s class="nav-item">
                            <a href="/CustomPages/About" class="nav-link">About Us</a>
                        </li>
                        <li b-o8z2mjie9s class="nav-item">
                            <a href="/CustomPages/ContactUs" class="nav-link">Contact Us</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div b-o8z2mjie9s class="container">
        <main b-o8z2mjie9s role="main" class="pb-3">
            <header>
                <h1 id="pageTitle">Welcome to SafeStreet Crime Data Analysis</h1>
            </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SafeStreet - <a asp-area="" asp-page="/Privacy">Privacy</a>
            <a asp-page="/TermsAndConditions">Terms and Conditions</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
