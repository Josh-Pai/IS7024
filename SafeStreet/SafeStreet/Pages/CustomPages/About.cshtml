        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Soft shadow for card effect */
    }

    .title {
        font-size: 2.5rem;
        font-weight: 700;
        color: black; /* Set "About Us" title to black */
        margin-bottom: 1rem;
        text-align: center;
    }

    .intro {
        font-size: 1.2rem;
        line-height: 1.8;
        margin-bottom: 2rem;
        text-align: justify;
        color: black; /* Ensure the intro paragraph is black */
    }

    .safeStreetText {
        color: #F60000; /* Keep "SafeStreet" in red */
    }

    .subtitle {
        font-size: 1.8rem;
        font-weight: 600;
        color: black; /* Set "SafeStreet Empowers Communities With" subtitle to black */
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    .features-list {
        font-size: 1.1rem;
        margin-left: 1.5rem;
        list-style: disc;
        color: black; /* Ensure list items are black */
        line-height: 1.7;
    }

        .features-list li {
            margin-bottom: 0.8rem;
        }

    .mission {
        font-size: 1.2rem;
        line-height: 1.8;
        color: black; /* Ensure the mission paragraph is black */
        margin-top: 2rem;
        text-align: justify;
    }

